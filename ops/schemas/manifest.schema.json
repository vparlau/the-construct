{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/the-construct/manifest.schema.json",
  "title": "the-construct Domain Manifest",
  "description": "Optional machine-readable inventory for a domain.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "domain",
    "owner",
    "version",
    "items"
  ],
  "properties": {
    "domain": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "owner": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "description": "SemVer for the domain snapshot.",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
    },
    "description": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
      },
      "uniqueItems": true
    },
    "generated": {
      "type": "boolean",
      "default": false
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "path",
          "type",
          "status"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
          },
          "path": {
            "type": "string",
            "description": "Relative path to the artifact file."
          },
          "type": {
            "type": "string",
            "enum": [
              "prompt",
              "template"
            ]
          },
          "status": {
            "type": "string",
            "enum": [
              "draft",
              "review",
              "released",
              "deprecated"
            ]
          },
          "version": {
            "type": "string",
            "description": "Optionalâ€”should match the artifact front-matter.",
            "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
            },
            "uniqueItems": true
          }
        }
      }
    }
  }
}